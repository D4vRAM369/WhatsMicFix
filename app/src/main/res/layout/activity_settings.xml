<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111316">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Contenido principal -->
        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="28dp"
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/app_name_description"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
            <Switch
                android:id="@+id/swEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/enable_preboost"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tvFactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ganancia: x1.35 (+2.6 dB)"
                android:textColor="#B0BEC5" />
            <SeekBar
                android:id="@+id/seekBoost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="400"
                android:progress="135" />
            <TextView
                android:id="@+id/tvRangeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/boost_range_info"
                android:textColor="#8FA3AD" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/stability_options"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
            <Switch
                android:id="@+id/swRespectFmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/respect_app_format"
                android:textColor="#FFFFFF" />
            <Switch
                android:id="@+id/swForceMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/force_mic_source"
                android:textColor="#FFFFFF" />
            <Switch
                android:id="@+id/swAgc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_agc"
                android:textColor="#FFFFFF" />
            <Switch
                android:id="@+id/swNs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_ns"
                android:textColor="#FFFFFF" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="#222427" />
            <TextView
                android:id="@+id/tvSupportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/support_section_title"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/btnGithubSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_github_badge"
                android:gravity="center"
                android:minHeight="56dp"
                android:padding="16dp"
                android:text="@string/support_github_badge"
                android:textColor="#F6F8FA"
                android:textSize="15sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />
            <TextView
                android:id="@+id/btnBuyCoffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_buy_coffee"
                android:gravity="center"
                android:minHeight="56dp"
                android:padding="16dp"
                android:text="@string/support_buy_coffee"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
