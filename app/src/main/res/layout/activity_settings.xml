<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111316">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhatsMicFix"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF" />

    <Switch
        android:id="@+id/swEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Activar pre-boost"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvFactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ganancia: x1.00 (+0.0 dB)"
        android:textColor="#B0BEC5" />

    <SeekBar
        android:id="@+id/seekBoost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="200" />

    <TextView
        android:id="@+id/tvRangeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Rango: 0.5× … 2.5×   (si distorsiona, baja el deslizador)"
        android:textColor="#8FA3AD" />

    <Switch
        android:id="@+id/swAdvanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rango avanzado (hasta 4×)"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="El rango avanzado puede introducir distorsión. Úsalo con moderación."
        android:textColor="#8FA3AD" />
</LinearLayout>
