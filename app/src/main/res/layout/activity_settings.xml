<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111316">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenido principal -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_description"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/enable_preboost"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvFactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ganancia: x1.35 (+2.6 dB)"
                android:textColor="#B0BEC5" />

            <SeekBar
                android:id="@+id/seekBoost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="400"
                android:progress="135" />

            <TextView
                android:id="@+id/tvRangeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/boost_range_info"
                android:textColor="#8FA3AD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/stability_options"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swRespectFmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/respect_app_format"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swForceMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/force_mic_source"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swAgc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_agc"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swNs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_ns"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
