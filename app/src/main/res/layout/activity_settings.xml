<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111316">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenido principal -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_description"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/enable_preboost"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvFactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ganancia: x1.35 (+2.6 dB)"
                android:textColor="#B0BEC5" />

            <SeekBar
                android:id="@+id/seekBoost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="400"
                android:progress="135" />

            <TextView
                android:id="@+id/tvRangeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/boost_range_info"
                android:textColor="#8FA3AD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/stability_options"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swRespectFmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/respect_app_format"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swForceMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/force_mic_source"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swAgc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habilitar AGC"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/swNs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_ns"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Botón de comprobación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_setup"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"/>
        </LinearLayout>

        <!-- Fila de estado (MOVIDA ABAJO) -->
        <LinearLayout
            android:id="@+id/statusRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/statusDot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/status_dot"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_signal"
                android:textSize="14sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
